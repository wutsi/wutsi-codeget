{{#scope}}
{{#services}}
  {{#database}}
spring:
  flyway:
    clean-disabled: true

  jpa:
    show-sql: false

  datasource:
    url: ${SPRING_DATABASE_URL}
    username: ${SPRING_DATABASE_USERNAME}
    password: ${SPRING_DATABASE_PASSWORD}
  {{/database}}

wutsi:
  client-id: {{name}}
  platform:
    security:
      type: jwt
  {{#cache}}
    cache:
      type: memcached
      memcached:
        username: ${MEMCACHIER_USERNAME}
        password: ${MEMCACHIER_PASSWORD}
        servers: ${MEMCACHIER_SERVERS}
  {{/cache}}
  {{#mqueue}}
    stream:
      type: rabbitmq
      rabbitmq:
        url: ${CLOUDAMQP_URL}
  {{/mqueue}}
{{/services}}

{{/scope}}
